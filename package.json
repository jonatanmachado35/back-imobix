{
  "name": "imobix",
  "version": "1.0.0",
  "description": "NestJS + Prisma + bcrypt clean architecture API",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start:prod": "sh start-prod.sh",
    "build": "tsc -p tsconfig.build.json && npm run build:seed",
    "postinstall": "prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "deploy:migrations": "npx prisma migrate deploy",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:e2e": "prisma migrate deploy && jest --config test/jest-e2e.json",
    "test:e2e:local": "./scripts/test-e2e-local.sh",
    "test:integration:local": "DATABASE_URL=postgresql://test_user:test_password@localhost:5433/imobix_test?schema=public DIRECT_URL=postgresql://test_user:test_password@localhost:5433/imobix_test?schema=public npm test -- --runInBand src/infrastructure/database/prisma-user.repository.spec.ts",
    "test:regression:local": "./scripts/test-regression-local.sh",
    "build:seed": "tsc prisma/seed.ts --outDir dist/prisma --skipLibCheck --module commonjs --target ES2021 --esModuleInterop"
  },
  "prisma": {
    "seed": "node dist/prisma/seed.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.4.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/platform-socket.io": "^10.4.22",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "^10.4.22",
    "@prisma/client": "^5.21.1",
    "@types/passport-jwt": "^4.0.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.9.0",
    "csv-parse": "^6.1.0",
    "dotenv": "^16.4.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^5.21.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.30",
    "@types/supertest": "^6.0.2",
    "sharp": "^0.34.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}